<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:src="@mipmap/main_bottomline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:id="@+id/item_goodsinfo_catalog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="A"/>
    <ImageView
        android:src="@mipmap/main_bottomline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<ImageView-->
            <!--android:layout_marginLeft="@dimen/dp_25"-->
            <!--android:id="@+id/item_goodsinfo_icon"-->
            <!--android:layout_width="70dp"-->
            <!--android:layout_height="70dp"/>-->
        <com.ybg.rp.assistant.view.CustomImgeView
            android:id="@+id/item_goodsinfo_icon"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_25" />

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_goodsinfo_tv_name"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:singleLine="true"
                    android:id="@+id/item_goodsinfo_tv_brand"
                    android:text=""
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:singleLine="true"
                    android:id="@+id/item_goodsinfo_tv_standard"
                    android:text=""
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/item_goodsinfo_tv_price"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/red"
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/item_goodsinfo_iv_addgroup"
                    android:layout_marginRight="@dimen/dp_30"
                    android:src="@drawable/add_commodity_selector"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_25"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>