<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/base_view"/>

    <LinearLayout
        android:id="@+id/user_detail_ll_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:text="头像"/>

        <com.ybg.rp.assistant.view.CustomImgeView
            android:id="@+id/user_detail_iv_head"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@mipmap/default_head"
            android:layout_marginLeft="@dimen/dp_20" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/icon_goright"/>
    </LinearLayout>

    <!--分割线=================================== -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/main_bottomline"/>

    <LinearLayout
        android:id="@+id/user_detail_ll_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_height"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:text="地区"/>

        <TextView
            android:id="@+id/user_detail_tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/icon_goright"/>
    </LinearLayout>

    <!--分割线=================================== -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/main_bottomline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_height"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:text="手机号"/>

        <TextView
            android:id="@+id/user_detail_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/icon_goright"/>
    </LinearLayout>

    <!--分割线=================================== -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/main_bottomline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_height"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:text="姓名"/>

        <TextView
            android:id="@+id/user_detail_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/tab_icon_arrow_2x"
            android:visibility="invisible"/>
    </LinearLayout>

    <!--分割线=================================== -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/main_bottomline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_height"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:text="身份证"/>

        <TextView
            android:id="@+id/user_detail_tv_certificateNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/tab_icon_arrow_2x"
            android:visibility="invisible"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/main_bottomline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="上次登录时间:"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/user_detail_tv_last_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text=""
            android:textColor="@color/gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="上次登录设备:"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/user_detail_tv_login_dev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text=""
            android:textColor="@color/gray"/>
    </LinearLayout>

    <TextView
        android:id="@+id/user_detail_tv_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_delete_bg"
        android:gravity="center"
        android:text="退出"
        android:textColor="@color/red"
        android:textSize="20sp"/>

</LinearLayout>