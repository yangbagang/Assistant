<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:id="@+id/line"
              android:background="@mipmap/icon_dialog"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_weight="1"
        android:background="@drawable/dialog_linear_selector"
        android:layout_marginLeft="@dimen/dp_5"
        android:id="@+id/pop_ll_add_goods"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@mipmap/dialog_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/white"
            android:text="新增商品"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:src="@mipmap/main_bottomline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp_5"
        android:background="@drawable/dialog_linear_selector"
        android:id="@+id/pop_ll_add_group_goods"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@mipmap/dialog_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/white"
            android:text="新增组合商品"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>